@using Microsoft.AspNetCore.Identity
@using ROS.Web.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

@if (SignInManager.IsSignedIn(User))
{
<a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="btn btn-link text-light"><i class="fas fa-user-alt"></i><span class="d-none d-md-inline"> Välkommen @user.FirstName!</span></a>

    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <button type="submit" class="btn btn-link text-light"><i class="fa fa-sign-out-alt"></i> <span class="d-none d-md-inline"> Logga ut</span></button>
    </form>
}
else
{
    <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-link text-light"><i class="fas fa-user-plus"></i><span class="d-none d-md-inline"> Registrera </span></a>
    <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-link text-light"><i class="fa fa-sign-in-alt"></i><span class="d-none d-md-inline"> Logga in </span></a>
}
