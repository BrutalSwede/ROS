@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@model IEnumerable<ROS.Web.Models.ApplicationUser>

<h2>User Management</h2>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No User Accounts in the Database</td></tr>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>User ID</th>
            <th>User name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>

        @foreach (IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>

                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" onclick="return confirm('Do you really want to delete this User?');" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                    <a asp-action="EditRole" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Change Role</a>
                </td>
            </tr>
        }
    </table>
}