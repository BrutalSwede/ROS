@using ROS.Web.Models.RegattaViewModels

@model RegattaRegistrationViewModel

@{
    ViewData["Title"] = "Register";
}

<h1 class="display-4">@Model.Regatta.Title</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(m => m.SelectedBoatId)
                @Html.DropDownListFor(m => m.SelectedBoatId, Model.BoatItems, new { @class = "form-control" })
                <span asp-validation-for="SelectedBoatId" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="NumberOfParticipants" class="form-label"></label>
                <div class="input-question-icon">
                    <input asp-for="NumberOfParticipants" min="1" value="1" class="form-control" />
                    <i class="fa fa-question-circle" data-toggle="tooltip" title="Inklusive dig själv"></i>
                </div>

                <span asp-validation-for="NumberOfParticipants"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message"></label>
                <textarea asp-for="Message" placeholder="Ett kort meddelande till arrangören." class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group">
                <a asp-action="Index" value="Avbryt" class="btn btn-danger">Avbryt</a>
                <input type="submit" value="Bekräfta" class="btn btn-success float-right" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
