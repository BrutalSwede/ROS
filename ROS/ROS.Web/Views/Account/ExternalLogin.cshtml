@model ExternalLoginViewModel

<div class="row" id="externlLogin-row">
    <div class="col-md-6 border" id="externalLogin-col">
        <h3>Koppla ditt @ViewData["LoginProvider"]-konto.</h3>
        <hr />
        <p class="text-info">
            Du har loggat in med <strong>@ViewData["LoginProvider"]</strong>. <br />
            Eftersom det är första gången du loggar in vill vi gärna veta lite mer om dig
            för att kunna förbättra din upplevelse. <br />
        </p>
        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6 required">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <div class="form-group col-md-6 required">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    
                </div>
            </div>
            <div class="form-group required">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group required">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-row">
                <div class="form-group col-md-6 required">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <div class="form-group col-md-6 required">
                    <label asp-for="IcePhone" class="form-label"></label>
                    <div class="iceice">
                        <i style="float:right" class="fa fa-question-circle" data-toggle="tooltip" title="ICE = In Case of Emergency."></i>
                        <input asp-for="IcePhone" class="form-control" />
                    </div>

                </div>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
