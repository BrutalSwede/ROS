@model IEnumerable<ROS.Web.Models.Boat>

@{
    ViewData["Title"] = "Index";
}

<h1 class="font-weight-bold">Register över befintliga båtar</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead> 
        <tr class="lead text-dark font-weight-bold tabellhuvve"> 
            <th style="width: 14%">
                @Html.DisplayNameFor(model => model.Name)
             </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Certificate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HandicapStandardWithForesail)
                </th>
                <th style="width: 21%">
                    @Html.DisplayNameFor(model => model.HandicapStandardWithoutForesail)
                </th>
                <th style="width: 10%">
                    @Html.DisplayNameFor(model => model.HandicapShorthandedWithForesail)
                </th>
                <th style="width: 25%">
                    @Html.DisplayNameFor(model => model.HandicapShorthandedWithoutForesail)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="tabelltext">    
                
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="tabelltext">
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certificate)
            </td>
            <td class="tabelltext">
                @Html.DisplayFor(modelItem => item.HandicapStandardWithForesail)
            </td>
            <td class="tabelltext">
                @Html.DisplayFor(modelItem => item.HandicapStandardWithoutForesail)
            </td>
            <td class="tabelltext">
                @Html.DisplayFor(modelItem => item.HandicapShorthandedWithForesail)
            </td>
            <td class="tabelltext">
                @Html.DisplayFor(modelItem => item.HandicapShorthandedWithoutForesail)
            </td>
            <td class="tabelltext">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
