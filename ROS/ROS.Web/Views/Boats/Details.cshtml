@model ROS.Web.Models.Boat

@{
    ViewData["Title"] = "Details";

}

<h1 class="font-weight-bold">Detail View</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="dl-horizontal lead text-dark font-weight-bold tablehead">
        <dt class="lead text-dark font-weight-bold tablehead">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="tabletext font-weight-normal">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="lead text-dark font-weight-bold tablehead">
            @Html.DisplayNameFor(model => model.Certificate)
        </dt>
        <dd class="tabletext font-weight-normal">
            @Html.DisplayFor(model => model.Certificate)
        </dd>
    </dl>

    <table id="boat-details-handicap" class="table-bordered">
        <thead>
            <tr>
                <th><span class="lead text-dark font-weight-bold tablehead">Handikapp</span></th>
                <th class="lead text-dark font-weight-bold tablehead">Normal</th>
                <th class="lead text-dark font-weight-bold tablehead">Shorthand</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">Försegel</th>
                <td class=" tabletext">@Html.DisplayFor(model => model.HandicapStandardWithForesail)</td>
                <td class=" tabletext">@Html.DisplayFor(model => model.HandicapShorthandedWithForesail)</td>
            </tr>
            <tr>
                <th scope="row">u. Försegel</th>
                <td class=" tabletext">@Html.DisplayFor(model => model.HandicapStandardWithoutForesail)</td>
                <td class=" tabletext">@Html.DisplayFor(model => model.HandicapShorthandedWithoutForesail)</td>
            </tr>
        </tbody>
    </table>

    <table class="table-bordered">
        <thead class="thead-light">
            <tr>
                
                    <th>Besättningsnamn</th>
                    <th>Kapten</th>
                    <th>Besättningsmedlemmar</th>
               

        </tr>
        </thead>
<tbody>
    @for (int crewIndex = 0; crewIndex < Model.Crews.Count(); crewIndex++)
    {
        <tr>
            <td class=" tabletext">@Model.Crews[crewIndex].Name</td>
            <td class=" tabletext">@Model.Crews[crewIndex].Captain.UserName</td>
            <td class=" tabletext">@Model.Crews[crewIndex].Crewmen.Count()</td>
        </tr>
    }
</tbody>
    </table>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
